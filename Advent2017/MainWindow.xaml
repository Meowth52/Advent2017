<Window x:Class="Advent2017.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Advent2017"
        mc:Ignorable="d"
        Title="MainWindow" Height="422.485" Width="625.444">
    <Window.DataContext>
        <local:MainView/>
    </Window.DataContext>
    <Grid>
        <TextBox x:Name="InputBox" HorizontalAlignment="Left" Height="113" Margin="119,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="476" AcceptsReturn="True" KeyUp="InputBoxKeyUp"/>
        <TextBox x:Name="OutputBox" HorizontalAlignment="Left" Height="197" Margin="119,181,-78,-59" TextWrapping="Wrap" VerticalAlignment="Top" Width="476" Text="{Binding OutText}"/>
        <TextBox x:Name="DayBox" HorizontalAlignment="Left" Height="30" Margin="10,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="74" AcceptsReturn="True" KeyUp="DayBoxKeyUp"/>

    </Grid>
</Window>
